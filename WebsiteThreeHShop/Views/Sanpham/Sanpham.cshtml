@model IEnumerable<WebsiteThreeHShop.Models.SANPHAM>
@using WebsiteThreeHShop.Models;


<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Sản phẩm</span></h2>
    <div class="row px-xl-5">
        @foreach (var sp in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="~/Content/imgweb/@sp.HINHMINHHOA" alt="">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="@Url.Action("ThemGioHang", "GioHang", new {msp=@sp.MASP,url=Request.Url.ToString()})"><i class="fa fa-shopping-cart"></i></a>

                            <a class="btn btn-outline-dark btn-square" href="@Url.Action("Chitietsanpham", "Sanpham", new { id = sp.MASP })"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="@Url.Action("Chitietsanpham", "Sanpham", new { id = sp.MASP })">@sp.TENSP</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@string.Format("{0:#,##0,0}", @sp.GIACA) VNĐ</h5><h6 class="text-muted ml-2"></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</div>




