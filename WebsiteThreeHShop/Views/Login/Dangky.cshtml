

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo Trang Login</title>
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/Content/Stylelogin2.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <section>
        <!--Bắt Đầu Phần Hình Ảnh-->
        <!--Kết Thúc Phần Hình Ảnh-->
        <!--Bắt Đầu Phần Nội Dung-->
        <div class="img-bg">
            <img src="https://niemvuilaptrinh.ams3.cdn.digitaloceanspaces.com/tao_trang_dang_nhap/hinh_anh_minh_hoa.jpg" alt="Hình Ảnh Minh Họa">
        </div>
        <div class="noi-dung">
            <div class="form">
                <h2>Trang Đăng Ký</h2>

                @using (Html.BeginForm("Dangky", "Login"))
                {
                    <span>@ViewBag.ThongBao</span>
                    <div class="input-form">
                        <span>Họ và Tên</span>
                        <input type="text" name="HoTen" placeholder="Họ và Tên" required="">
                    </div>
                    <div class="input-form">
                        <span>Tên Đăng nhập</span>
                        <input type="text" name="TenDN" placeholder="Tên Đăng nhập" required="">
                    </div>
                    <div class="input-form">
                        <span>Mật Khẩu</span>
                        <input type="password" name="MatKhau" placeholder="Mật khẩu" required="">
                    </div>
                    <div class="input-form">
                        <span>Địa chỉ</span>
                        <input type="text" name="Diachi" placeholder="Địa chỉ" required="">
                    </div>
                    <div class="input-form">
                        <span>Email</span>
                        <input type="email" name="Email" placeholder="Email" required="">
                    </div>
                    <div class="input-form">
                        <span>Số điện thoại</span>
                        <input type="number" name="DienThoai" placeholder="Điện thoại" required="">
                    </div>
                    <div class="input-form">
                        <span>Tuổi</span>
                        <input type="date" name="NgaySinh" placeholder="Ngày sinh" required="">
                    </div>

                    <div class="input-form">
                        <input type="submit" value="Đăng ký">
                    </div>

                }

            </div>
        </div>
        <!--Kết Thúc Phần Nội Dung-->
    </section>
</body>
</html>




