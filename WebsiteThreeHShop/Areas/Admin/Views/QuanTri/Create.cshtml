@model WebsiteThreeHShop.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "QuanTri", FormMethod.Post, new { @entype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên sản phẩm</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenSach" value="@ViewBag.TenSP" required="" />
                @Html.ValidationMessageFor(model => model.MASP, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-md-2">Nội dung</label>
            <div class="col-md-10">
                <textarea name="sMota">@ViewBag.Mota</textarea>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá cả</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="mGiaBan" value="@ViewBag.GiaBan" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Hình minh họa</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã loại sản phẩm</label>
            <div class="col-md-10">
                @Html.DropDownList("LSP")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã danh mục</label>
            <div class="col-md-10">
                @Html.DropDownList("MADM")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
